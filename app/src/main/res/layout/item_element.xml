<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_250dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#44444444"
        android:textSize="@dimen/text_huge"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="年" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/edge"
        android:gravity="center"
        android:textSize="@dimen/text_title"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="庚辰" />

    <TextView
        android:id="@+id/tv_TG"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/text_text"
        android:layout_marginTop="@dimen/edge"
        app:layout_constraintEnd_toStartOf="@id/tv_DZ"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        tools:text="庚" />

    <TextView
        android:id="@+id/tv_DZ"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/edge"
        android:gravity="center"
        android:textSize="@dimen/text_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_TG"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        tools:text="辰" />

    <TextView
        android:id="@+id/tv_WX1"
        app:layout_constraintStart_toStartOf="@id/tv_TG"
        app:layout_constraintEnd_toEndOf="@id/tv_TG"
        android:layout_width="0dp"
        tools:text="阳金"
        android:gravity="center"
        android:textSize="@dimen/text_desc"
        android:layout_marginTop="@dimen/edge"
        app:layout_constraintTop_toBottomOf="@id/tv_TG"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_WX2"
        app:layout_constraintStart_toStartOf="@id/tv_DZ"
        app:layout_constraintEnd_toEndOf="@id/tv_DZ"
        android:layout_width="0dp"
        tools:text="阴土"
        android:gravity="center"
        android:textSize="@dimen/text_desc"
        android:layout_marginTop="@dimen/edge"
        app:layout_constraintTop_toBottomOf="@id/tv_TG"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>